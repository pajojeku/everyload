<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- ===== GOOGLE MATERIAL 3 â€“ MINIMALIST LIGHT THEME ===== -->
    <style name="Base.Theme.Everyload" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary: Google Blue -->
        <item name="colorPrimary">@color/md_theme_primary</item>
        <item name="colorOnPrimary">@color/md_theme_onPrimary</item>
        <item name="colorPrimaryContainer">@color/md_theme_primaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/md_theme_onPrimaryContainer</item>
        
        <!-- Secondary: Neutral Grey -->
        <item name="colorSecondary">@color/md_theme_secondary</item>
        <item name="colorOnSecondary">@color/md_theme_onSecondary</item>
        <item name="colorSecondaryContainer">@color/md_theme_secondaryContainer</item>
        <item name="colorOnSecondaryContainer">@color/md_theme_onSecondaryContainer</item>
        
        <!-- Tertiary: Google Green -->
        <item name="colorTertiary">@color/md_theme_tertiary</item>
        <item name="colorOnTertiary">@color/md_theme_onTertiary</item>
        
        <!-- Backgrounds & Surfaces -->
        <item name="android:colorBackground">@color/md_theme_background</item>
        <item name="colorOnBackground">@color/md_theme_onBackground</item>
        <item name="colorSurface">@color/md_theme_surface</item>
        <item name="colorOnSurface">@color/md_theme_onSurface</item>
        <item name="colorSurfaceVariant">@color/md_theme_surfaceVariant</item>
        <item name="colorOnSurfaceVariant">@color/md_theme_onSurfaceVariant</item>
        <item name="colorSurfaceContainer">@color/md_theme_surfaceContainer</item>
        <item name="colorSurfaceContainerHigh">@color/md_theme_surfaceContainerHigh</item>
        
        <!-- Outlines -->
        <item name="colorOutline">@color/md_theme_outline</item>
        <item name="colorOutlineVariant">@color/md_theme_outlineVariant</item>
        
        <!-- System bars: white with dark icons -->
        <item name="android:statusBarColor">@color/md_theme_background</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:navigationBarColor">@color/md_theme_background</item>
        <item name="android:windowLightNavigationBar">true</item>
        
        <!-- Smooth, rounded shapes (Google style) -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.Everyload.Small</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.Everyload.Medium</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.Everyload.Large</item>
        
        <!-- Button styles -->
        <item name="materialButtonStyle">@style/Widget.Everyload.Button</item>
        <item name="materialButtonOutlinedStyle">@style/Widget.Everyload.Button.Outlined</item>
        
        <!-- Card style -->
        <item name="materialCardViewFilledStyle">@style/Widget.Everyload.Card</item>
    </style>

    <style name="Theme.Everyload" parent="Base.Theme.Everyload" />
    
    <!-- ===== SHAPE APPEARANCES ===== -->
    <style name="ShapeAppearance.Everyload.Small" parent="ShapeAppearance.Material3.Corner.Small">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>
    
    <style name="ShapeAppearance.Everyload.Medium" parent="ShapeAppearance.Material3.Corner.Medium">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>
    
    <style name="ShapeAppearance.Everyload.Large" parent="ShapeAppearance.Material3.Corner.Large">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">24dp</item>
    </style>
    
    <!-- ===== BUTTON STYLES ===== -->
    <style name="Widget.Everyload.Button" parent="Widget.Material3.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
        <item name="cornerRadius">24dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:minHeight">48dp</item>
    </style>
    
    <style name="Widget.Everyload.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
        <item name="cornerRadius">24dp</item>
        <item name="strokeColor">@color/md_theme_outline</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:minHeight">48dp</item>
    </style>
    
    <style name="Widget.Everyload.Button.Text" parent="Widget.Material3.Button.TextButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:minHeight">48dp</item>
    </style>
    
    <style name="Widget.Everyload.Button.Danger" parent="Widget.Everyload.Button">
        <item name="backgroundTint">@color/status_error</item>
        <item name="android:textColor">@color/white</item>
    </style>
    
    <!-- ===== CARD STYLES ===== -->
    <style name="Widget.Everyload.Card" parent="Widget.Material3.CardView.Filled">
        <item name="cardBackgroundColor">@color/md_theme_surfaceContainer</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">0dp</item>
        <item name="strokeWidth">0dp</item>
    </style>
    
    <style name="Widget.Everyload.Card.Outlined" parent="Widget.Material3.CardView.Outlined">
        <item name="cardBackgroundColor">@color/md_theme_surface</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">0dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/md_theme_outlineVariant</item>
    </style>
    
    <!-- ===== TEXT APPEARANCES ===== -->
    <style name="TextAppearance.Everyload.HeadlineLarge" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="android:fontFamily">sans-serif</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:textSize">32sp</item>
        <item name="android:letterSpacing">-0.01</item>
    </style>
    
    <style name="TextAppearance.Everyload.TitleMedium" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textSize">16sp</item>
    </style>
    
    <style name="TextAppearance.Everyload.BodyMedium" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:fontFamily">sans-serif</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:textSize">14sp</item>
    </style>
    
    <style name="TextAppearance.Everyload.LabelSmall" parent="TextAppearance.Material3.LabelSmall">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textSize">12sp</item>
    </style>
</resources>